ol.breadcrumb(itemscope itemtype="http://schema.org/BreadcrumbList")
  each item, i in path
    if item.href
      li.breadcrumb__list(itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem")
        a(href=item.href, itemprop="item").breadcrumb__link
          span(itemprop="name")= item.name
        meta(itemprop='position', content=i)
    else
      li.breadcrumb__list.active= item.name
